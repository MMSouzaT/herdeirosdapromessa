# Habilitar RewriteEngine
RewriteEngine On

# Redirecionar URLs antigas com /pagina/ e .html para as novas URLs limpas
RewriteCond %{REQUEST_URI} ^/pagina/(.+)\.html$ [NC]
RewriteRule ^pagina/(.+)\.html$ /$1 [R=301,L]

# URLs amig√°veis - redirecionar para os arquivos .html correspondentes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^adquira_ja$ /pagina/adquira_ja.html [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^conteudo_gratuito$ /pagina/conteudo_gratuito.html [L]

